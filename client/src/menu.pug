
nav.navbar.navbar-inverse.navbar-fixed-top
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(
                    type='button'
                    data-toggle='collapse'
                    data-target='#navbar'
                    aria-expanded='false'
                    aria-controls='navbar'
                )
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(
                    href='/'
                    onclick='false'
                ) SB JSON

        #navbar.navbar-collapse.collapse(v-if='selectFile !== false')
            .btn-group
                button.btn.navbar-btn.btn-default(
                        @click='selectFileSave'
                        title="Save"
                    ) 
                        i.glyphicon.glyphicon-floppy-disk
                        |  Save
    
                button.btn.navbar-btn.btn-default(
                        @click='selectFileOpen'
                        title='Open in new tab'
                    )
                        i.glyphicon.glyphicon-new-window
                        |  Open
    
                button.btn.navbar-btn.btn-danger(
                        @click='selectFileDelete'
                        title='Delete'
                    )
                        i.glyphicon.glyphicon-trash
    
                button.btn.navbar-btn.btn-default(
                        @click='selectFile=false'
                        title='Close'
                    )
                        i.glyphicon.glyphicon-remove

            ul.nav.navbar-nav.navbar-right
                li#alertMess
                    transition(name="bounce")
                        p.navbar-text(
                                v-if="mess"
                                :class="alertClass"
                            ) {{ mess }}
                li
                    a(
                            href='#'
                            @click.prevent='logOut'
                        ) Logout
